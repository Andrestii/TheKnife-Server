    <Label fx:id="testid" text="Credenziali Database" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="hostField" promptText="Host" maxWidth="200.0" />
    <TextField fx:id="usernameField" promptText="Username" maxWidth="200.0" />
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200.0" />
    
    <Button text="Avvia" fx:id="avviaButton" onAction="#invioDatiDB"/>
